{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2015",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@nx-playground/ui-timer": [
        "libs/ui/components/timer/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
